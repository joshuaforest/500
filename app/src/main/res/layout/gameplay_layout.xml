<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:baselineAligned="false"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btn_Game"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onBtnQuit"
        android:text="Quit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/bidLayout"
        android:layout_width="368dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/handLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <Spinner
            android:id="@+id/spnSuit"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/spnNumber"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnBid"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="Bid" />
    </LinearLayout>




    <LinearLayout
        android:id="@+id/handLayout"
        android:layout_width="368dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageButton
            android:id="@+id/imageButton10"
            android:onClick="selectCard"
            android:layout_width="35dp"
            android:layout_height="80dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ace_of_clubs" />
        <ImageButton
            android:id="@+id/imageButton9"
            android:onClick="selectCard"
            android:layout_width="35dp"
            android:layout_height="80dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ace_of_clubs" />
        <ImageButton
            android:id="@+id/imageButton8"
            android:onClick="selectCard"
            android:layout_width="35dp"
            android:layout_height="80dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ace_of_clubs" />
        <ImageButton
            android:id="@+id/imageButton7"
            android:onClick="selectCard"
            android:layout_width="35dp"
            android:layout_height="80dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ace_of_clubs" />
        <ImageButton
            android:id="@+id/imageButton6"
            android:onClick="selectCard"
            android:layout_width="35dp"
            android:layout_height="80dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ace_of_clubs" />
        <ImageButton
            android:id="@+id/imageButton5"
            android:onClick="selectCard"
            android:layout_width="35dp"
            android:layout_height="80dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ace_of_clubs" />
        <ImageButton
            android:id="@+id/imageButton4"
            android:onClick="selectCard"
            android:layout_width="35dp"
            android:layout_height="80dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ace_of_clubs" />
        <ImageButton
            android:id="@+id/imageButton3"
